<div align="center">
<h1>  <U> Policy Claim </U> </h2>

<form action="#" method="POST">
<table>
	<tr>
		<td>
			*Policy Registration Id
		</td>
		<td>
			<input type="text" placeholder="Policy Reg. Id" id="policyId" name="policyRegId" />
		</td>
	</tr>
	<tr>
		<td>
			*Date Of Claim
		</td>
		<td>
			<input type="text" placeholder="DD-MM-YYYY" id="claimDate" name="claimDate" />
		</td>
	</tr>
	<tr>
		<td>
			*Type Of Claim
		</td>
		<td style="color:black">
			<input type="radio"  id='claimTypeM' name="claimType" value="M" />Maturity
			<input type="radio"  id='claimTypeI' name="claimType" value="I" />Incident
			<input type="radio"  id='claimTypeB' name="claimType" value="B" />Break
		</td>
	</tr>
	<tr>
		<td>
			*Approver Id
		</td>
		<td>
			<input type="text" placeholder="Policy Manager Id" id="approverId" name="approverId" />
		</td>
	</tr>
</table>
	
	<br>
	<input type="submit" Value="Apply Claim" name="clicked"/>
	<input type="button" Value="Reset" id="clicked"/>

</form>
	
	<p style="color:red"> (*): Mandatory Fields </p>
	
	<br>
		<h3 style="color: black ; text-align:center;"><%=message%>  </h3>
	<%if(errors != undefined) { %>
	<ul>
		<p><u>Error Details:</u></p>
		<% errors.forEach(function(error) { %>
		<li>
			<%=error.msg %>
		</li>
		<% }) %>
	</ul>
<% } %>
<br><br>
